    <div class="portlet" id="config-port"> 
      <div class="portlet-header">Configuration:</div>
      <div class="portlet-content">

        <select  id="ctl-color-scale">
          <option value="RedBluePalette">Red-Blue Palette</option>
          <option value="GrayscalePalette">Grayscale Palette</option>
          <option value="BrownPurplePalette" selected="selected">Brown-Purple Palette</option>
          <option value="CurtPalette">Curt's Palette</option>
        </select><br/>
        <div><input type="checkbox" id="ctl-magnifying-glass"   name="ctl-magnifying-glass"   checked="yes" /><label for="ctl-magnifying-glass"  >Magnifying glass</label></div>
        <div id="mag-sliders">
          <div>
          <label for="ctl-magnifier-size">Mag. Size</label>         
          <input id="ctl-magnifier-size" type="text" value="40" size="4" />
          </div>
          <div id="ctl-magnifier-size-slider"></div>
          <div>
          <label for="ctl-magnifier-mag">Magnification</label>         
          <input id="ctl-magnifier-mag"  type="text" value="2.5" size="4" />          
          </div>
          <div id="ctl-magnifier-mag-slider"></div>
        </div>
        <div><input type="checkbox" id="ctl-show-hitmap-regions" name="ctl-show-hitmap-regions" checked="yes" /><label for="ctl-show-hitmap-regions">Show <span class='keyhint'>r</span>egions</label></div>
        <div><input type="checkbox" id="ctl-show-hitmap-hits"   name="ctl-show-hitmap-hits"   checked="yes" /><label for="ctl-show-hitmap-hits"  >Show hits</label></div>
        <div>&nbsp;&nbsp;<input type="checkbox" id="ctl-show-hitmap-hits-flagged-only"   name="ctl-show-hitmap-hits-flagged-only" /><label for="ctl-show-hitmap-hits-flagged-only"  >Show flagged only</label></div>
        <div>&nbsp;&nbsp;<input type="checkbox" id="ctl-show-hitmap-hits-user-color"   name="ctl-show-hitmap-hits-user-color" /><label for="ctl-show-hitmap-hits-user-color"  >Use User Color</label></div>
        <div><input type="checkbox" id="ctl-show-hitmap-clusters"   name="ctl-show-hitmap-clusters"  /><label for="ctl-show-hitmap-clusters"  >Show <span class='keyhint'>c</span>lusters</label></div>
        <div style="margin-left:20px;">
          <input type="checkbox" id="ctl-show-hitmap-la-clusters"   name="ctl-show-hitmap-la-clusters" checked="yes" /><label for="ctl-show-hitmap-la-clusters"  >Show low-activity clusters</label><br/>
          <input type="radio" id='ctl-show-hitmap-clusters-all'                name="hitmap-clus-radio" value="all" checked='yes' /> All<br />
          <input type="radio" id='ctl-show-hitmap-clusters-flagged'            name="hitmap-clus-radio" value="flagged" /> Flagged only<br />
          <input type="radio" id='ctl-show-hitmap-clusters-anchor'             name="hitmap-clus-radio" value="anchor" /> Anchor only<br />
          <input type="radio" id='ctl-show-hitmap-clusters-primary-anchored'   name="hitmap-clus-radio" value="primary-anchored" /> Primary anchored only<br />
          <input type="radio" id='ctl-show-hitmap-clusters-secondary-anchored' name="hitmap-clus-radio" value="secondary-anchored" /> Secondary anchored only<br />
          </div>
        
        <div><input type="checkbox" id="ctl-show-hitmap-blobs"   name="ctl-show-hitmap-blobs" /><label for="ctl-show-hitmap-blobs"  >Show <span class='keyhint'>b</span>lobs</label></div>
        <!-- <div>&nbsp;&nbsp;<input type="checkbox" id="ctl-show-hitmap-blobs-flagged-only"   name="ctl-show-hitmap-blobs-flagged-only" /><label for="ctl-show-hitmap-blobs-flagged-only"  >Show flagged only</label></div> -->

        <div id='blob-opacity'>
                <div>
                <label for="ctl-blob-opacity">Blob Opacity</label>         
                <input id="ctl-blob-opacity" type="text" value="0.7" size="4" />
                </div>
                <div id="ctl-blob-opacity-slider"></div>

        </div>
        
        <div><input type="checkbox" id="ctl-show-hitmap-tracks" name="ctl-show-hitmap-tracks" checked="yes" /><label for="ctl-show-hitmap-tracks">Show <span class='keyhint'>t</span>racks</label></div>
        <div style="margin-left:20px;">
          <!-- <input type="checkbox" id="ctl-show-hitmap-tracks-flagged-only"   name="ctl-show-hitmap-tracks-flagged-only" /><label for="ctl-show-hitmap-tracks-flagged-only"  >Show flagged only</label><br/> -->
          <input type="radio" id='ctl-show-hitmap-tracks-all'                name="hitmap-track-radio" value="all" checked='yes' /> All<br />
          <input type="radio" id='ctl-show-hitmap-tracks-flagged'            name="hitmap-track-radio" value="flagged" /> Flagged only<br />
          <input type="radio" id='ctl-show-hitmap-tracks-anchor'             name="hitmap-track-radio" value="anchor" /> Anchor only<br />
          <input type="radio" id='ctl-show-hitmap-tracks-primary-anchored'   name="hitmap-track-radio" value="primary-anchored" /> Primary anchored only<br />
          <input type="radio" id='ctl-show-hitmap-tracks-secondary-anchored' name="hitmap-track-radio" value="secondary-anchored" /> Secondary anchored only<br />
          </div>
        <div><input type="checkbox" id="ctl-show-hitmap-vertices" name="ctl-show-hitmap-vertices" checked="yes" /><label for="ctl-show-hitmap-vertices">Show <span class='keyhint'>v</span>ertices</label></div>
        <div>&nbsp;&nbsp;<input type="checkbox" id="ctl-show-hitmap-vertices-flagged-only"   name="ctl-show-hitmap-vertices-flagged-only" /><label for="ctl-show-hitmap-vertices-flagged-only"  >Show flagged only</label></div>
        <div><input type="checkbox" id="ctl-show-hitmap-truth" name="ctl-show-hitmap-truth" checked="yes" /><label for="ctl-show-hitmap-truth">Draw <span class='keyhint'>M</span>C truth</label></div>
        <div>&nbsp;&nbsp;<input type="checkbox" id="ctl-show-hitmap-truth-nucleus"   name="ctl-show-hitmap-truth-nucleus" checked="checked"/><label for="ctl-show-hitmap-truth-nucleus"  >Show interaction point</label></div>
        
        <div><input type="checkbox" id="ctl-hitmap-triangles" name="ctl-hitmap-triangles" checked="yes" /><label for="ctl-hitmap-triangles">Draw triangles</label></div>
        <div><input type="checkbox" id="ctl-show-labels" name="ctl-show-labels" checked="yes" /><label for="ctl-show-labels">Draw Axis Labels</label></div>
        <div><input type="checkbox" id="ctl-show-tick-labels" name="ctl-show-tick-labels" checked="yes" /><label for="ctl-show-tick-labels">Draw Tick Values</label></div>


        <button class="open-dialog" id='open-hit-info'>Show Hit Info</button>        
         <br/>
         <button class="ui-state-default ui-corner-all" id='ctl-save-config'>Save</button>        
         <button class="ui-state-default ui-corner-all" id='ctl-load-config'>Load</button>        
         <button class="ui-state-default ui-corner-all" id='ctl-scanner-config'>Scan</button>        
         <button class="ui-state-default ui-corner-all" id='ctl-restore-defaults'>Restore Defaults</button>

      </div>      
    </div> <!-- configuration portlet -->

